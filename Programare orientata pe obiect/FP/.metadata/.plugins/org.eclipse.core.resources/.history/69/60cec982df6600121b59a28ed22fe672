from UI.AgendaController import *

class AgendaUI:
    def __int__(self):
        pass
    def PrintMenu(self):
        """
            Show the MainMenu
        """
        print """--------------------
        MENU
--------------------
1. ADD CONTACT
2. SEARCH CONTACT
3. SEARCH GROUP
4. EXPORT TO A FILE
0. EXIT"""
        i=input('Operation:')
        while i<0 or i>4:
            print "WRONG OPERATION!"
            i=input('New operation:')
        return i

    def add(self):
        """
            Add a new contact to the database
        """
        ac=AgendaController()
        name=raw_input('    Name:').strip()
        id=input('    ID:')
        nr=raw_input('    Phone Number:').strip()
        group=raw_input('    Group:')
        i=ac.addContact(self,id,name,nr,group)
        while i==False:
            print "Invalid contact"
            self.add()


    def run(self):
        """
            Run the applicaion
        """
        i=self.PrintMenu()
        while i<>0:
            commands=[self.add]
            commands[i-1]()
            i=self.PrintMenu()

def testAgendaUI():
    aui=AgendaUI()
    aui.run()
testAgendaUI()